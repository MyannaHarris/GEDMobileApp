<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/squish"
            android:scaleType="centerCrop"
            android:gravity="top" />
    </item>
    <item android:height="10dp"
        android:width="10dp"
        android:id="@+id/accessory_picture_1">
        <bitmap android:src="@drawable/example_picture"
            android:scaleType="centerCrop"
            android:gravity="clip_horizontal|clip_vertical|left|top"/>
    </item>
    <item android:height="10dp"
        android:width="10dp"
        android:id="@+id/accessory_picture_2">

        <bitmap android:src="@drawable/example_picture"
            android:scaleType="centerCrop"
            android:gravity="clip_horizontal|clip_vertical|right|top" />
    </item>
    <item android:height="10dp"
        android:width="10dp"
        android:id="@+id/accessory_picture_3">
        <bitmap android:src="@drawable/example_picture"
            android:scaleType="centerCrop"
            android:gravity="clip_horizontal|clip_vertical|right|bottom" />
    </item>
</layer-list>